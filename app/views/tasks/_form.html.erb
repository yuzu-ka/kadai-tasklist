<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-md-offset-2 col-sm-8 col-md-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |f| %>
        <% if task.errors.any? %>
        <div class="alert alert-warning">
          <div id="error_explanation">
            <ul>
              <% task.errors.full_messages.each do |task| %>
                <li><%= task %></li>
              <% end %>
            </ul>
        </div>
        </div>
        <% end %>
  </div>
</div>